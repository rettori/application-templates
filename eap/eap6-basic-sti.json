{
    "kind": "Template",
    "apiVersion": "v1beta1",
    "metadata": {
        "annotations": {
            "description": "Application template for EAP 6 applications built using STI."
        },
        "name": "rettor-eap6-basic-sti"
    },
    "labels": {
        "template": "rettori-eap6-basic-sti"
    },
    "parameters": [
        {
            "description": "EAP Release version, e.g. 6.4, etc.",
            "name": "EAP_RELEASE",
            "value": "6.4"
        },
        {
            "description": "The name for the application.",
            "name": "APPLICATION_NAME",
            "value": "eap-app"
        },
        {
            "description": "Hostname for service routes",
            "name": "APPLICATION_HOSTNAME",
            "value": "eap-app.local"
        },
        {
            "description": "Git source URI for application",
            "name": "GIT_URI"
        },
        {
            "description": "Git branch/tag reference",
            "name": "GIT_REF",
            "value": "master"
        },
        {
            "description": "Path within Git project to build; empty for root project directory.",
            "name": "GIT_CONTEXT_DIR",
            "value": ""
        },
        {
            "description": "Github trigger secret",
            "name": "GITHUB_TRIGGER_SECRET",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression"
        },
        {
            "description": "Generic build trigger secret",
            "name": "GENERIC_TRIGGER_SECRET",
            "from": "[a-zA-Z0-9]{8}",
            "generate": "expression"
        },
        {
            "description": "Domain name for OpenShift DNS.  Required for proper configuration of clustering",
            "name": "DNS_DOMAIN",
            "value": "local"
        },
        {
            "description": "Project namespace within which application is deployed.  Required for proper configuraiton of clustering",
            "name": "NAMESPACE",
            "value": ""
        },
        {
            "description": "The name of the keystore file within the local configuration directory",
            "name": "EAP_HTTPS_KEYSTORE",
            "value": ""
        },
        {
            "description": "The name associated with the server certificate",
            "name": "EAP_HTTPS_NAME",
            "value": ""
        },
        {
            "description": "The password for the keystore and certificate",
            "name": "EAP_HTTPS_PASSWORD",
            "value": ""
        }
    ],
    "items": [
        {
            "kind": "Service",
            "apiVersion": "v1beta3",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "this-app"
                }
            },
            "metadata": {
                "name": "this-app-http-service",
                "labels": {
                    "application": "this-app"
                },
                "annotations": {
                    "description": "The web server's http port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1beta3",
            "spec": {
                "ports": [
                    {
                        "port": 8443,
                        "targetPort": 8443
                    }
                ],
                "selector": {
                    "deploymentConfig": "this-app"
                }
            },
            "metadata": {
                "name": "this-app-https-service",
                "labels": {
                    "application": "this-app"
                },
                "annotations": {
                    "description": "The web server's https port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1beta3",
            "spec": {
                "ports": [
                    {
                        "port": 8888,
                        "targetPort": 8888
                    }
                ],
                "portalIP": "None",
                "selector": {
                    "deploymentConfig": "this-app"
                }
            },
            "metadata": {
                "name": "this-app-ping",
                "labels": {
                    "application": "this-app"
                },
                "annotations": {
                    "description": "Ping service for clustered applications."
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1beta1",
            "id": "this-app-http-route",
            "metadata": {
                "name": "this-app-http-route",
                "labels": {
                    "application": this-app"
                },
                "annotations": {
                    "description": "Route for application's http service."
                }
            },
            "host": "this-app",
            "serviceName": "this-app-http-service"
        },
        {
            "kind": "Route",
            "apiVersion": "v1beta1",
            "id": "this-app-https-route",
            "metadata": {
                "name": "this-app-https-route",
                "labels": {
                    "application": "this-app"
                },
                "annotations": {
                    "description": "Route for application's https service."
                }
            },
            "host": "${APPLICATION_HOSTNAME}",
            "serviceName": "this-app-https-service",
            "tls": {
                "termination" : "passthrough"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1beta1",
            "metadata": {
                "name": "this-app",
                "labels": {
                    "application": "this-app"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1beta1",
            "metadata": {
                "name": "this-app",
                "labels": {
                    "application": "this-app"
                }
            },
            "triggers": [
                {
                    "type": "github",
                    "github": {
                        "secret": "${GITHUB_TRIGGER_SECRET}"
                    }
                },
                {
                    "type": "generic",
                    "generic": {
                        "secret": "${GENERIC_TRIGGER_SECRET}"
                    }
                },
                {
                    "type": "imageChange",
                    "imageChange": {
                        "image": "registry.access.redhat.com/jboss-eap-6/eap-openshift:${EAP_RELEASE}",
                        "from": {
                            "name": "jboss-eap6-openshift"
                        },
                        "tag": "${EAP_RELEASE}"
                    }
                }
            ],
            "parameters": {
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${GIT_URI}",
                        "ref": "${GIT_REF}"
                    },
                    "contextDir":"${GIT_CONTEXT_DIR}"
                },
                "strategy": {
                    "type": "STI",
                    "stiStrategy": {
                        "from": {
                            "name": "jboss-eap6-openshift"
                        },
                        "tag": "${EAP_RELEASE}",
                        "clean": true
                    }
                },
                "output": {
                    "to": {
                        "name": "this-app"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1beta1",
            "metadata": {
                "name": "this-app",
                "labels": {
                    "application": "this-app"
                }
            },
            "triggers": [
                {
                    "type": "ImageChange",
                    "imageChangeParams": {
                        "automatic": true,
                        "containerNames": [
                            "this-app"
                        ],
                        "from": {
                            "name": "this-app"
                        },
                        "tag": "latest"
                    }
                }
            ],
            "template": {
                "strategy": {
                    "type": "Recreate"
                },
                "controllerTemplate": {
                    "replicas": 1,
                    "replicaSelector": {
                        "deploymentConfig": "this-app"
                    },
                    "podTemplate": {
                        "desiredState": {
                            "manifest": {
                                "version": "v1beta1",
                                "containers": [
                                    {
                                        "name": "this-app",
                                        "image": "this-app",
                                        "imagePullPolicy": "PullAlways",
                                        "ports": [
                                            {
                                                "name": "this-app-tcp-8080",
                                                "containerPort": 8080,
                                                "protocol": "TCP"
                                            },
                                            {
                                                "name": "this-app-tcp-8443",
                                                "containerPort": 8443,
                                                "protocol": "TCP"
                                            },
                                            {
                                                "name": "this-app-ping-8888",
                                                "containerPort": 8888,
                                                "protocol": "TCP"
                                            }
                                        ],
                                        "env": [
                                            {
                                                "name": "OPENSHIFT_PING_SERVICE",
                                                "value": "$this-app-ping"
                                            },
                                            {
                                                "name": "OPENSHIFT_PING_NAMESPACE",
                                                "value": "${NAMESPACE}"
                                            },
                                            {
                                                "name": "OPENSHIFT_PING_DOMAIN",
                                                "value": "${DNS_DOMAIN}"
                                            },
                                            {
                                                "name": "EAP_HTTPS_KEYSTORE",
                                                "value": "${EAP_HTTPS_KEYSTORE}"
                                            },
                                            {
                                                "name": "EAP_HTTPS_NAME",
                                                "value": "${EAP_HTTPS_NAME}"
                                            },
                                            {
                                                "name": "EAP_HTTPS_PASSWORD",
                                                "value": "${EAP_HTTPS_PASSWORD}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        "labels": {
                            "deploymentConfig": "this-app",
                            "application": "this-app"
                        }
                    }
                }
            }
        }
    ]
}
